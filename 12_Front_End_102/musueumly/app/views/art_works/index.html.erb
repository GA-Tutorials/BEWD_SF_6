<div class="col-xs-12">
<h1 class="my_red" style="font-size:70px;">Art Works</h1>

<table class="table table-responsive table-bordered table-hover">
<tr> <th> Art Work Image</th>
<th> Title </th>
<th> Artist </th>
<th> Description </th>
<th> Actions</th>

</tr>
<tr>
<% @art_works.each do |art| %> 
<td class="col-xs-2">   <%= image_tag(art.image, :class => 'img-rounded thumbnail img-responsive') %> </td>
<td> <%= art.name %> </td>
<td> <%= link_to "#{art.artist.name}", artist_path(art.artist) %> </td> 
<td class="col-xs-6"><%= art.description %> </td>
<td> <%=link_to "Show", art_work_path(art), :class => 'btn btn-primary btn-sm' %> 
<%=link_to "Edit", edit_art_work_path(art), :class => 'btn btn-default btn-sm' %> 
<%=link_to "Delete", art, method: :delete, data: {confirm: "Are you sure"}, :class => 'btn btn-danger btn-sm' %> </td>
</tr> 
<%end %>

</table>
<div style="text-align:center;" class="well white ">
<%=link_to "Add Art Work", new_art_work_path, :class => "btn btn-lg btn-default	" %>  
</div>
</div> 
